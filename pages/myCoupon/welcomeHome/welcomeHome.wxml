<!--欢迎回家页面  -->
<view class="welcomeHomeImage">
<!--顶部图片信息  -->
  <view class="welcomeImage">
    <image src="../../../images/regest.png"></image>
  </view>
<!--底部用户信息  -->
  <view class="welcomeUserInfo">
    <form>
      <view class="welcomeTitle">请输入手机登录后查询优惠券</view>
      <view class="inputTel">
        <view class="inputTelImage">
        <image src="../../../images/phone.png"></image>
        </view>
        <view class="inputTelText">
        <input placeholder='请输入您的手机号' bindblur='loginPhone' type="number"></input>
        <!--请输入您的手机号-->
        </view>
      </view>
       <view class="yanzhengma">
        <view class="yanzhengmaImage"><image src="../../../images/yzm.png"></image></view>
        <view class="yanzhengmaInput">
          <view>
            <input class="yanzhengmContext" placeholder='请输入验证码' name="yzm" type='number' bindblur='yanZhengInput'></input>
          </view>
          <view>
            <button class="yanzhengmaBtn" bindtap="yanzhengBtn">{{getText}}</button>
          </view>
        </view>
      </view> 
      <view class="loginButton">
        <button bindtap='LoginCheckMyOrder'>登录查询</button>
      </view>
      <!-- <view>
       <navigator class="skipLogin" url="">跳过登录</navigator>
      </view>-->
    </form>
  </view>
</view>
