/* pages/welcomeLogin/welcomeLogin.wxss */
.welcomeHomeImage{
  width:100%;
  text-align: center;
  display: block;
  overflow: hidden;
  margin:0 auto;
  padding:0 auto;
}
/*顶部图文信息样式  */
.welcomeImage{
  width:100%;
  height:310rpx;
  overflow:hidden;
  display: flex;
  flex-flow: column;
  flex:1;
}
.welcomeImage>image{
  display: block;
  text-align: center;
  width:224rpx;
  height:180rpx;
  margin:80rpx auto 20rpx;  
}
/*底部用户信息  */
.welcomeUserInfo{
  width:80%;
  margin:0px auto;
  text-align:center;
}
.welcomeTitle{
color:#979797;
font-size:12px;
font-family: STHeitiSC;
text-align:center;
}
.inputTel{
  width:600rpx;
  height:88rpx;
  margin :20rpx auto;
  border:1px solid #f0f0f0;
  display: flex;
  flex:1;
  overflow:hidden;
  justify-content: space-between;
  line-height: 88rpx;
}
.inputTelImage{
  width:88rpx;
  border-right:1px solid #f0f0f0;
}
.inputTelImage>image{
  width:34rpx;
  height:60rpx;
  margin:10px 20px 20px 10px ;
}
.inputTelText{
  width:480rpx;
}
.inputTelText>input{
  text-align: left;
  font-size:28rpx;
  color:#979797;
  height:88rpx;
  line-height:88rpx;
  font-family: STHeitiSC;
}
/*验证码  */
.yanzhengma{
  width:600rpx;
  height:88rpx;
  margin-top:10rpx;
  border:2rpx solid #f0f0f0;
  display: flex;
  flex:1;
  justify-content: space-between;
  overflow:hidden;
  line-height: 88rpx;
}
.yanzhengmaInput{
  padding-left:20rpx;
  text-align: left;
  width:60%;
}
